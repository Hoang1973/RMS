@model RMS.Models.DiscountViewModel
@{
    ViewData["Title"] = "Edit Discount";
}
<h2>Edit Discount</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountType"></label>
        <select asp-for="DiscountType" class="form-control">
            <option value="0">Percentage</option>
            <option value="1">Fixed</option>
        </select>
        <span asp-validation-for="DiscountType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountValue"></label>
        <input asp-for="DiscountValue" class="form-control" />
        <span asp-validation-for="DiscountValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IngredientId">Ingredient</label>
        <select asp-for="IngredientId" class="form-control" asp-items="@(new SelectList(ViewBag.Ingredients, "Id", "Name"))">
            <option value="">-- None --</option>
        </select>
        <span asp-validation-for="IngredientId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
