@model RMS.Models.DiscountViewModel
@{
    ViewData["Title"] = "Delete Discount";
}
<h2>Delete Discount</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.DiscountType</dd>
        <dt class="col-sm-2">Value</dt>
        <dd class="col-sm-10">@Model.DiscountValue</dd>
        <dt class="col-sm-2">Ingredient</dt>
        <dd class="col-sm-10">@Model.IngredientName</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
