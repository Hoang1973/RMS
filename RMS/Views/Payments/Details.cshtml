@model RMS.Models.PaymentViewModel
@{
    ViewData["Title"] = $"Chi tiết thanh toán #{Model.Id}";
}
<h2 class="text-xl font-bold mb-4">Chi tiết thanh toán #@Model.Id</h2>
<div class="mb-2"><b>Bàn:</b> @Model.TableNumber</div>
<div class="mb-2"><b>Số tiền thanh toán:</b> @Model.AmountPaid.ToString("N0") ₫</div>
<div class="mb-2"><b>Phương thức:</b> @Model.PaymentMethod</div>
<div class="mb-2"><b>Ngày tạo:</b> @Model.CreatedAt?.ToString("HH:mm dd/MM/yyyy")</div>
<a class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" href="@Url.Action("Index")">Quay lại danh sách</a>
