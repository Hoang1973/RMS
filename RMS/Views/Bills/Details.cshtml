@model RMS.Models.BillViewModel
@{
    ViewData["Title"] = $"Chi tiết hóa đơn #{Model.Id}";
}
<h2 class="text-xl font-bold mb-4">Chi tiết hóa đơn #@Model.Id</h2>
<div class="mb-2"><b>Bàn:</b> @Model.TableNumber</div>
<div class="mb-2"><b>Tổng tiền hàng:</b> @Model.Subtotal.ToString("N0") ₫</div>
<div class="mb-2"><b>VAT (%):</b> @Model.VatPercent</div>
<div class="mb-2"><b>Tiền VAT:</b> @Model.VatAmount.ToString("N0") ₫</div>
<div class="mb-2"><b>Tổng sau VAT:</b> @Model.TotalAmount.ToString("N0") ₫</div>
<div class="mb-2"><b>Giảm giá:</b> @Model.DiscountAmount.ToString("N0") ₫</div>
<div class="mb-2"><b>Thành tiền phải trả:</b> @Model.TotalDue.ToString("N0") ₫</div>
<a class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" href="@Url.Action("Index")">Quay lại danh sách</a>
