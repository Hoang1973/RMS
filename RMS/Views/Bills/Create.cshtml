@model RMS.Models.BillViewModel
@{
    ViewData["Title"] = "Tạo hóa đơn mới";
}
<h2 class="text-xl font-bold mb-4">Tạo hóa đơn mới</h2>
<form asp-action="Create" method="post">
    <div class="mb-2">
        <label for="OrderId" class="block">Mã đơn hàng</label>
        <input asp-for="OrderId" class="border px-2 py-1 w-full" />
    </div>
    <div class="mb-2">
        <label for="Subtotal" class="block">Tổng tiền hàng</label>
        <input asp-for="Subtotal" class="border px-2 py-1 w-full" />
    </div>
    <div class="mb-2">
        <label for="TotalAmount" class="block">Tổng tiền đã tính thuế</label>
        <input asp-for="TotalAmount" class="border px-2 py-1 w-full" />
    </div>
    <div class="mb-2">
        <label for="TotalDue" class="block">Tổng thanh toán</label>
        <input asp-for="TotalDue" class="border px-2 py-1 w-full" />
    </div>
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Lưu hóa đơn</button>
    <a class="ml-4 text-blue-600 hover:underline" href="@Url.Action("Index")">Hủy</a>
</form>
