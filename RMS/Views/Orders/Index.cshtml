@model IEnumerable<RMS.Models.OrderViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>ORDERS</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    @if (item.Status == RMS.Data.Entities.Order.OrderStatus.Pending)
                    {
                        <button class="btn btn-success btn-sm" onclick="completePayment(@item.Id, @item.TableId)">
                            Pay
                        </button>
                    }
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        function completePayment(orderId, tableId) {
            if (!confirm("Xác nhận thanh toán đơn hàng này?")) return;

            fetch(`/Orders/CompletePayment?orderId=${orderId}&tableId=${tableId}`, {
                method: "POST"
            })
            .then(response => {
                if (response.ok) {
                    alert("Thanh toán thành công!");
                    location.reload(); // Reload trang để cập nhật trạng thái mới
                } else {
                    alert("Lỗi khi thanh toán, vui lòng thử lại.");
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("Có lỗi xảy ra, vui lòng thử lại.");
            });
        }
    </script>
}
