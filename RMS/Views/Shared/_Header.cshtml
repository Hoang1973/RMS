@* Header partial view based on PoeGenerated.html *@
@using System.Security.Claims
@{
    var role = User.FindFirst(ClaimTypes.Role)?.Value;
}

<header class="bg-primary text-white shadow-md">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
        <div class="flex items-center">
            <span class="text-2xl font-bold tracking-wide">Restaurant Manager</span>
        </div>
        <div class="flex items-center space-x-4">
            @if (!string.IsNullOrEmpty(role))
            {
                <span id="header-user-role" class="hidden md:inline-block bg-white text-primary font-semibold px-3 py-1 rounded-full text-sm shadow">
                    Role: @role
                </span>
            }
            <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                <button type="submit" class="bg-secondary hover:bg-primary text-white px-4 py-2 rounded transition flex items-center">
                    <i class="fas fa-sign-out-alt mr-1"></i>
                    <span class="hidden md:inline">Đăng xuất</span>
                </button>
            </form>
        </div>
    </div>
</header>

